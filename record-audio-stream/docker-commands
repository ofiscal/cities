docker build -f Dockerfile -t                      \
  jeffreybbrown/record-audio-stream .              \
  | tee logs/"build-log.`date`.txt"

docker run --name record-audio-stream -it          \
  -v /home/jeff/record-audio-stream/master:/mnt    \
  -p 8888:9000 -d -h 127.0.0.1                     \
  jeffreybbrown/record-audio-stream

